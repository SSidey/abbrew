<div class="abbrew chat-message chat-card flexcol " data-actor-id="{{actor._id}}" data-item-id="{{item._id}}"
    data-token-id="{{tokenId}}" data-message-id="{{messageId}}">
    <header>
        <h3 class="item-name">{{item.name}}</h3>
    </header>

    <div class="message-content">
        <div>
            <ol class="skill-card-descriptions">
                {{#each allSummaries as |summary| }}
                <li>
                    <h3>{{summary.name}}</h3>
                    <span>
                        {{{summary.description}}}
                    </span>
                </li>
                {{/each}}
            </ol>
        </div>
        <div class="dice-roll">
            <div class="dice-result">
                <div class="dice-formula">{{totalSuccesses}}</div>
                <div class="dice-tooltip">
                    <section class="tooltip-part">
                        <div class="dice">
                            <ol class="dice-rolls">
                                {{#each resultDice as |die id|}}
                                <li class="{{die.classes}}">
                                    {{die.result}}
                                </li>
                                {{/each}}
                            </ol>
                        </div>
                    </section>
                </div>
                <h4 class="dice-total">
                    <ol>
                        {{#each damage as |dmg id|}}
                        <div>
                            <label>{{dmg.value}} {{dmg.damageType}}</label>
                        </div>
                        {{/each}}
                    </ol>
                </h4>
            </div>
        </div>
    </div>

    {{!-- TODO: If Crit, allow damage or finisher / do damage instead if no finisher --}}
    <div class="card-buttons">
        {{#unless isStrongAttack}}
        {{#unless isFinisher}}
        {{#if showAttack}}
        <button data-action="damage">Damage</button>
        {{/if}}
        {{/unless}}
        {{/unless}}
        {{#unless showAttack}}
        {{#if isStrongAttack}}
        <button data-action="overpower">Overpower</button>
        {{/if}}
        {{/unless}}
        {{#unless showFinisher}}
        {{#if showAttack}}
        {{#if showParry}}
        <button data-action="parry"><span class="actions-icon action-{{actionCost}}a">Parry</span></button>
        {{/if}}
        {{/if}}
        {{/unless}}
        {{#if showFinisher}}
        <button data-action="finisher">Finisher</button>
        {{/if}}
    </div>
</div>