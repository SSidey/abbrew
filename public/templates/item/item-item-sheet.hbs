<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
      <div class="grid grid-2col">
        <div class="resource">
          <label class="resource-label">Quantity</label>
          <input type="text" name="system.quantity" value="{{system.quantity}}" data-dtype="Number" />
        </div>
        <div class="resource">
          <label class="resource-label">Weight</label>
          <input type="text" name="system.weight" value="{{system.weight}}" data-dtype="Number" />
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    {{#if system.isWeapon }}
    <a class="item" data-tab="weapon">Weapon</a>
    {{/if}}
    {{#if system.isArmour }}
    <a class="item" data-tab="armour">Armour</a>
    {{/if}}
    {{#if system.isConsumable }}
    <a class="item" data-tab="consumable">Consumable</a>
    {{/if}}
    <a class="item" data-tab="effects">Effects</a>
    <a class="item" data-tab="rules">Rules</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      <header>
        <div>
          <label>Material</label>
        </div>
        {{#each system.material}}
        <div>
          <label class="item-label">{{@key}}</label>
          <input type="text" name="system.material.{{@key}}" value="{{this}}" data-dtype="text" />
        </div>
        {{/each}}
      </header>

      <header>
        <div>
          <label><input type="checkbox" name="system.isWeapon" {{checked system.isWeapon}} />Is Weapon?</label>
        </div>
        <div>
          <label><input type="checkbox" name="system.isArmour" {{checked system.isArmour}} />Is Armour?</label>
        </div>
        <div>
          <label><input type="checkbox" name="system.isConsumable" {{checked system.isConsumable}} />Is
            Consumable?</label>
        </div>
      </header>
      {{!-- To render inline rolls in a TinyMCE editor, you need to pass the parent actor's (if any) roll data to the
      rollData prop. --}}
      {{editor system.enrichedDescription target="system.description" rollData=rollData button=true owner=owner
      editable=editable}}
    </div>

    {{!-- Weapon Tab --}}
    <div class="tab" data-group="primary" data-tab="weapon">
      {{#if system.isWeapon }}
      <div>
        <label class="item-label">Requirements</label>
        <input type="text" name="system.weapon.requirements" value="{{system.weapon.requirements}}" data-dtype="text" />
        <br>
        <label class="item-label">Reach</label>
        <input type="number" name="system.weapon.reach" value="{{system.weapon.reach}}" data-dtype="Number" />
        <label class="item-label">MinimumEffectiveReach</label>
        <input type="number" name="system.weapon.minimumEffectiveReach" value="{{system.weapon.minimumEffectiveReach}}"
          data-dtype="Number" />
        <label><input type="checkbox" name="system.weapon.focused" {{checked system.weapon.focused}} />Focused</label>
        <br>
        <label class="item-label">Weapon Profiles</label>
        {{!-- TODO: 1. Good one for tagify --}}
        <input type="text" name="system.weapon.weaponProfiles" value="{{system.weapon.weaponProfiles}}"
          data-dtype="text" />
        <label class="item-label">Penetration</label>
        <input type="number" name="system.weapon.penetration" value="{{system.weapon.penetration}}" data-dtype="Number" />
        <label class="item-label">Traits</label>
        <input type="text" name="system.weapon.traits" value="{{system.weapon.traits}}" data-dtype="text" />
        <label class="item-label">Hands Required</label>
        <input type="number" name="system.weapon.handsRequired" value="{{system.weapon.handsRequired}}"
          data-dtype="Number" />
        <label class="item-label">Critical Threshold</label>
        <input type="number" name="system.weapon.criticalThreshold" value="{{system.weapon.criticalThreshold}}"
          data-dtype="Number" />
      </div>
      {{/if}}
    </div>

    {{!-- Armour Tab --}}
    <div class="tab" data-group="primary" data-tab="armour">
      {{#if system.isArmour }}
      <div>
        <label class="item-label">Requirements</label>
        <input type="text" name="system.armour.requirements" value="{{system.armour.requirements}}" data-dtype="text" />
        <label><input type="checkbox" name="system.armour.base" {{checked system.armour.base}} />Base</label>
        <label><input type="checkbox" name="system.armour.mid" {{checked system.armour.mid}} />Mid</label>
        <label><input type="checkbox" name="system.armour.outer" {{checked system.armour.outer}} />Outer</label>
        <hr>
        <label class="item-label">Armour Points</label>
        <input type="text" name="system.armour.armourPoints" value="{{system.armour.armourPoints}}" data-dtype="text" />
        <label class="item-label">Type</label>
        <input type="text" name="system.armour.type" value="{{system.armour.type}}" data-dtype="text" />
      </div>
      {{/if}}
    </div>

    {{!-- Armour Tab --}}
    <div class="tab" data-group="primary" data-tab="consumable">
      {{#if system.isConsumable }}
      {{#each system.consumable}}
      <div>
        <label class="item-label">{{@key}}</label>
        <input type="text" name="system.consumable.{{@key}}" value="{{this}}" data-dtype="text" />
      </div>
      {{/each}}
      {{/if}}
    </div>

    {{!-- Effects Tab --}}
    <div class="tab effects" data-group="primary" data-tab="effects">
      {{> "systems/abbrew/templates/parts/active-effects.hbs"}}
    </div>

    {{!-- Rules Tab --}}
    <div class="tab rules" data-group="primary" data-tab="rules">
      {{> "systems/abbrew/templates/parts/item-rules.hbs"}}
    </div>
  </section>
</form>