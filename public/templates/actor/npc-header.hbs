{{!-- Sheet Header --}}
<header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
    <div class="header-fields">
        <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
        {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
        use both the "grid" and "grid-Ncol" class where "N" can be any number
        from 1 to 12 and will create that number of columns. --}}
        <div class="resources grid grid-3col">

            {{!-- TODO: Stop this from resizing with the wound image --}}
            {{!-- "flex-group-center" is also defined in the _grid.scss file
            and it will add a small amount of padding, a border, and will
            center all of its child elements content and text. --}}
            <div class="resource">
                <div class="flex-group-center">
                    <label for="system.wounds" class="resource-label">Wounds</label>
                </div>
                <ol class="wound-container">
                    {{#each system.wounds as |wound|}}
                    <li class="wound" data-action="changeWoundValue" data-wound-type="{{wound.type}}"
                        data-wound-value="{{wound.value}}">
                        <div class="wound-value">{{wound.value}}</div>
                        <img class="wound-image" src="systems/abbrew/assets/icons/wounds/{{wound.type}}.webp"
                            alt="{{wound.type}} {{wound.value}}">
                        <span class="wound-tooltip">{{wound.type}}</span>
                    </li>
                    {{/each}}
                </ol>
            </div>

            <div class="resource flex-group-center">
                <label for="system.attributes.level.value" class="resource-label">Tier</label>
                <div class="resource-content flexrow flex-center flex-between">
                    <input type="text" name="system.meta.tier.value" value="{{system.meta.tier.value}}"
                        data-dtype="Number" {{#unless (isGM)}}readonly{{/unless}} />
                </div>
            </div>

            <div class="resource flex-group-center">
                <label for="system.actions" class="resource-label">Actions</label>
                <div class="resource-content flexrow flex-center flex-between">
                    <input type="text" name="system.actions" value="{{system.actions}}" data-dtype="Number" />
                </div>
            </div>

            <div class="resource flex-group-center">
                <label for="system.defense.guard" class="resource-label">Guard</label>
                <div class="resource-content flexrow flex-center flex-between">
                    <input type="text" name="system.defense.guard.value" value="{{system.defense.guard.value}}"
                        data-dtype="Number" />
                    <span> / </span>
                    <input type="text" value="{{system.defense.guard.max}}" data-dtype="Number" readonly />
                </div>
            </div>

            <div class="resource flex-group-center">
                <label for="system.defense.risk" class="resource-label">Risk</label>
                <div class="resource-content flexrow flex-center flex-between">
                    <input type="text" name="system.defense.risk.raw" value="{{system.defense.risk.raw}}"
                        data-dtype="Number" {{!-- readonly --}} />
                </div>
            </div>


            <div class="resource flex-group-center">
                <label for="system.defense.resolve" class="resource-label">Resolve</label>
                <div class="resource-content flexrow flex-center flex-between">
                    <input type="text" {{#gm}}name="system.defense.resolve.value"
                        value="{{system.defense.resolve.value}}" {{else}}value="??" {{/gm}}
                        max="{{system.defense.resolve.max}}" data-dtype="Number" />
                    <span> / </span>
                    <input type="text" {{#gm}}name="system.defense.resolve.max" value="{{system.defense.resolve.max}}"
                        {{else}} value="??" {{/gm}} data-dtype="Number" />
                </div>
            </div>

        </div>
    </div>
</header>