<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='Create item' data-type='equipment'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='equipment'}}
      </a>
    </div>
  </li>
  {{#each storage as |item id|}}
  <li>
    <div class="item item-row container" data-item-id='{{item.container._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.container.img}}' title='{{item.container.name}}' width='24' height='24' />
          </a>
        </div>
        <h4 class="item-label">{{item.container.name}}</h4>
      </div>
      <div class="resource flex-group-center">
        <div class="resource-content flexrow flex-center flex-between">
          <input type="text" value="{{item.container.system.storage.value}}" data-dtype="Number" readonly />
          <span> / </span>
          <input type="text" value="{{item.container.system.storage.max}}" data-dtype="Number" readonly />
        </div>
      </div>
      {{#if (eq item.container.type "armour")}}
      <label class="icon-label">
        <input type="checkbox" class="armour-sunder" name="system.isSundered" {{ checked item.system.isSundered }}>
        {{#if item.system.isSundered}}
        <span class="icon icon-sunder-c" />
        {{else}}
        <span class="icon icon-sunder-u" />
        {{/if}}
      </label>
      {{/if}}
    </div>
    <ol class="stored-items" style="list-style: none; padding-left: 0px;">
      {{#each item.contents as |stored id|}}
      <li class='item item-row' data-item-id='{{stored._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img src='{{stored.img}}' title='{{stored.name}}' width='24' height='24' />
            </a>
          </div>
          <h4 class="item-label">{{stored.name}}</h4>
        </div>
        {{#if item.isAccessible}}
        {{> "systems/abbrew/templates/item/parts/item-equip-state-changes.hbs" equipStates =
        stored.system.validEquipStates}}
        {{/if}}
        {{#if (eq stored.type "armour")}}
        <label class="icon-label">
          <input type="checkbox" class="armour-sunder" name="system.isSundered" {{ checked stored.system.isSundered }}>
          {{#if stored.system.isSundered}}
          <span class="icon icon-sunder-c" />
          {{else}}
          <span class="icon icon-sunder-u" />
          {{/if}}
        </label>
        {{/if}}
        {{#gm}}
        <label>
          <input type="checkbox" class="anatomy-revealed" name="system.revealed.isRevealed" {{ checked
            stored.system.revealed.isRevealed }}>
          {{#if stored.system.revealed.isRevealed}}
          <span class="icon icon-anatomy-revealed-c" />
          {{else}}
          <span class="icon icon-anatomy-revealed-u" />
          {{/if}}
        </label>
        {{/gm}}
        <div class='item-controls'>
          {{#gm}}
          <a class='item-control item-study' title='{{localize "DOCUMENT.Study" type=' equipment'}}'>
            <i class="fa-solid fa-magnifying-glass"></i>
          </a>
          {{/gm}}
          <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' equipment'}}'>
            <i class='fas fa-edit'></i>
          </a>
          <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' equipment'}}'>
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
      {{/each}}
    </ol>
  </li>
  {{/each}}
</ol>