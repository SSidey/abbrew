<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='Create item' data-type='armour'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='armour'}}
      </a>
    </div>
  </li>
  {{#each armour as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4>{{item.name}}</h4>
    </div>
    {{#if ../showEquipState}}
    {{#if (eq item.system.equipType "held")}}
    <select class="item-select" name="system.equipState">
      {{selectOptions ../config.equipState selected=item.system.equipState localize=true}}
    </select>
    {{else}}
    <select class="item-select" name="system.equipState">
      {{selectOptions ../config.armourEquipState selected=item.system.equipState localize=true}}
    </select>
    {{/if}}
    {{/if}}
    <div class='item-controls'>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' armour'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' armour'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>