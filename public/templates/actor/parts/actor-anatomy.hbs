<div class="traits">
  <div class="flex-group-center">
    <input type="text" name="system.traits.raw" value="{{system.traits.raw}}" data-dtype="String" />
  </div>
</div>
<div>
  <label class="label">Size</label>
  <select class="" name="system.meta.size">
    {{selectOptions config.size selected=system.meta.size valueAttr="value" labelAttr="label"
    localize=true}}
  </select>
</div>
<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' data-action="createItem" title='Create item' data-type="anatomy">
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type="anatomy"}}
      </a>
    </div>
  </li>
  {{#each anatomy as |item id|}}
  <li class='item item-row' data-item-id='{{item._id}}'>
    <div class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-action="rollable" data-roll-type='item'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4 class="item-label">{{item.name}}</h4>
    </div>
    {{#gm}}
    <div class="icon-label-3">
      <label>
        <input type="checkbox" class="anatomy-broken" name="system.isBroken" data-action="toggleBroken" {{ checked
          item.system.isBroken }}>
        {{#if item.system.isBroken}}
        <span class="icon icon-anatomy-broken-c" />
        {{else}}
        <span class="icon icon-anatomy-broken-u" />
        {{/if}}
      </label>
      <label>
        <input type="checkbox" class="anatomy-severed" data-action="toggleDismembered" name="system.isDismembered" {{
          checked item.system.isDismembered }}>
        {{#if item.system.isDismembered}}
        <span class="icon icon-anatomy-severed-c" />
        {{else}}
        <span class="icon icon-anatomy-severed-u" />
        {{/if}}
      </label>
      <label>
        <input type="checkbox" class="anatomy-revealed" name="system.revealed.isRevealed" data-action="toggleRevealed"
          {{ checked item.system.revealed.isRevealed }}>
        {{#if item.system.revealed.isRevealed}}
        <span class="icon icon-anatomy-revealed-c" />
        {{else}}
        <span class="icon icon-anatomy-revealed-u" />
        {{/if}}
      </label>
    </div>
    {{else}}
    <div class="icon-label-2">
      <label>
        <input type="checkbox" class="anatomy-broken" name="system.isBroken" data-action="toggleBroken" {{ checked
          item.system.isBroken }}>
        {{#if item.system.isBroken}}
        <span class="icon icon-anatomy-broken-c" />
        {{else}}
        <span class="icon icon-anatomy-broken-u" />
        {{/if}}
      </label>
      <label>
        <input type="checkbox" class="anatomy-severed" name="system.isDismembered" data-action="toggleDismembered" {{
          checked item.system.isDismembered }}>
        {{#if item.system.isDismembered}}
        <span class="icon icon-anatomy-severed-c" />
        {{else}}
        <span class="icon icon-anatomy-severed-u" />
        {{/if}}
      </label>
    </div>
    {{/gm}}
    <div class={{#if (or showDeleteControl (isGM))}}'item-controls'{{else}}'item-controls-1'{{/if}}>
      <a class='item-control item-edit' data-action="editItem" title='{{localize "DOCUMENT.Edit" type=' anatomy'}}'>
        <i class='fas fa-edit'></i>
      </a>
      {{#gm}}
      <a class='item-control item-study' data-action="studyItem" title='{{localize "DOCUMENT.Study" type='
        equipment'}}'>
        <i class="fa-solid fa-magnifying-glass"></i>
      </a>
      {{/gm}}
      {{#if showDeleteControl}}
      <a class='item-control item-delete' data-action="deleteItem" title='{{localize "DOCUMENT.Delete" type='
        anatomy'}}'>
        <i class='fas fa-trash'></i>
      </a>
      {{/if}}
    </div>
  </li>
  {{/each}}
</ol>