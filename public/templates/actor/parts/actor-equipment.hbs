<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='Create item' data-type='equipment'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='equipment'}}
      </a>
    </div>
  </li>
  {{#each equipment as |item id|}}
  <li class='item item-row' data-item-id='{{item._id}}'>
    <div class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4 class="item-label">{{item.name}}</h4>
    </div>
    {{> "systems/abbrew/templates/item/parts/item-equip-state-changes.hbs" equipStates =
    item.system.validEquipStates}}
    {{#if (hasValue item.container.isSundered)}}
    <label class="icon-label">
      <input type="checkbox" class="armour-sunder" name="system.isSundered" {{ checked item.system.isSundered }}>
      {{#if item.system.isSundered}}
      <span class="icon icon-sunder-c" />
      {{else}}
      <span class="icon icon-sunder-u" />
      {{/if}}
    </label>
    {{/if}}
    <div class='item-controls'>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' equipment'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' equipment'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>