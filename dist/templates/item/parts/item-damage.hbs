<ol class="form-list">
    {{#each system.damage as |damage i|}}
    <li class="item effect flexrow" data-id="{{i}}">
        <div>
            <label>{{ localize "ABBREW.Type" }}</label>
            <select name="system.damage.{{i}}.type">
                {{selectOptions ../config.concepts selected=damage.type blank="" localize=true}}
            </select>
        </div>
        <div>
            <label>{{ localize "ABBREW.Damage" }}</label>
            <input type="text" name="system.defense.damage.{{i}}.value" value="{{damage.value}}"
                data-dtype="Number" />
        </div>
        <a class="damage-control remove-damage" data-action="remove-damage">
            <i class="fa-solid fa-minus"></i>
        </a>
    </li>
    {{/each}}
    <li class="damage add">
        <div class="form-group">
            <label>
                <a class="damage-control" data-action="add-damage">
                    Add Damage
                    <i class="fa-solid fa-plus"></i>
                </a>
            </label>
        </div>
    </li>
</ol>