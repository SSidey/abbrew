<ol class='items-list'>
  {{#each skillSections as |skillType i|}}
  <li>
    {{!-- TODO: Add count of cards? --}}
    {{!-- TODO: Need to add paths section where each path has the block below to add skills --}}
  <li class='item flexrow items-header skill-header' data-skill-section="{{localize (skillType)}}">
    <div class='item-name'>{{localize (skillType)}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='Create item' data-type='skill'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='skill'}}
      </a>
    </div>
  </li>
  <ol class='skill-container'
    style="display:  {{#if (empty (getProperty ../skills (localize (skillType))))}}none{{else}}grid{{/if}};"
    data-skill-section="{{localize (skillType)}}">
    {{#each (getProperty ../skills (localize (skillType))) as |item id|}}
    <li class='item flexrow skill-card' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' skill'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' skill'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ol>
  </li>
  {{/each}}
</ol>